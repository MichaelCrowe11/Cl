# Enhanced Environment Configuration for Crowe Logic AI

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_ORG_ID=your_openai_org_id_here

# Anthropic (Claude) Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Google Gemini Configuration  
GOOGLE_API_KEY=your_google_api_key_here

# Database Configuration (Optional)
DATABASE_URL=your_database_url_here

# JWT Secret for Authentication
NEXTAUTH_SECRET=your_nextauth_secret_here
NEXTAUTH_URL=http://localhost:3000

# Security Configuration
QFOL_SAFETY_LEVEL=moderate
ALLOWED_ORIGINS=http://localhost:3000,https://your-domain.vercel.app

# Mycology-Specific Configuration
DEFAULT_SUBSTRATE_TYPES=straw,sawdust,coffee_grounds,coconut_coir
DEFAULT_SPECIES_DATABASE=oyster,shiitake,lions_mane,reishi
CONTAMINATION_DETECTION_ENABLED=true

# File Upload Configuration
MAX_FILE_SIZE=10MB
ALLOWED_FILE_TYPES=.txt,.md,.csv,.json,.py,.jpg,.png

# Terminal Security
TERMINAL_ENABLED=true
TERMINAL_TIMEOUT=30000

# Development/Production Mode
NODE_ENV=development
